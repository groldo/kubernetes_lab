---
apiVersion: kubeadm.k8s.io/v1beta2
kind: JoinConfiguration
caCertPath: /etc/kubernetes/pki.ca.crt
discovery:
  bootstrapToken:
    apiServerEndpoint: {{ api_kubevip }}
    token: {{ token }}
    caCertHashes:
      - "{{ ca_cert_hash }}"
  timeout: 5m0s
  tlsBootstrapToken: token
nodeRegistration:
  criSocket: unix:///run/containerd/containerd.sock
  taints: null
